{
  "openapi": "3.0.0",
  "info": {
    "title": "NexusEvo API",
    "description": "API completa para la gestión de la plataforma NexusEvo, incluyendo administración central y gestión de tenants.",
    "version": "1.1.0"
  },
  "servers": [
    {
      "url": "https://{tenant}.nexusevo.net/api/",
      "description": "API de Tenant",
      "variables": {
        "tenant": {
          "default": "my-tenant"
        }
      }
    },
    {
      "url": "https://nexusevo.net/system/api/",
      "description": "API de Sistema (Panel Central)"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login de Tenant",
        "description": "Autenticación para usuarios de un tenant específico.",
        "tags": ["Tenant Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "example": "user@tenant.com" },
                  "password": { "type": "string", "example": "password" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Token generado exitosamente" }
        }
      }
    },
    "/auth/me": {
      "get": {
        "summary": "Perfil de Usuario Tenant",
        "tags": ["Tenant Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Datos del usuario" }
        }
      }
    },
    "/device/status": {
      "get": {
        "summary": "Obtener estado del dispositivo",
        "tags": ["Messaging"],
        "responses": {
          "200": { "description": "Estado del dispositivo" }
        }
      }
    },
    "/message/send-text": {
      "post": {
        "summary": "Enviar mensaje de texto",
        "tags": ["Messaging"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["number", "message"],
                "properties": {
                  "number": { "type": "string" },
                  "message": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Mensaje enviado" }
        }
      }
    },
    "/devices": {
      "get": {
        "summary": "Listar dispositivos",
        "tags": ["Devices"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de dispositivos" }
        }
      },
      "post": {
        "summary": "Crear dispositivo",
        "tags": ["Devices"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["device_name"],
                "properties": {
                  "device_name": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Dispositivo creado" }
        }
      }
    },
    "/campaigns": {
      "get": {
        "summary": "Listar campañas",
        "tags": ["Campaigns"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de campañas" }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login de Sistema",
        "tags": ["System Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Auth exitosa" }
        }
      }
    },
    "/tenants": {
      "get": {
        "summary": "Listar Tenants",
        "tags": ["System Tenants"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de tenants" }
        }
      }
    },
    "/tenants/{tenant}/block": {
      "post": {
        "summary": "Bloquear Tenant",
        "tags": ["System Tenants"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "tenant", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Tenant bloqueado" }
        }
      }
    },
    "/plans": {
      "get": {
        "summary": "Listar Planes",
        "tags": ["System Plans"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de planes" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
