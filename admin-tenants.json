{
  "openapi": "3.0.0",
  "info": {
    "title": "NexusEvo System API - Tenants",
    "description": "Endpoints para la gesti√≥n de tenants (clientes).",
    "version": "1.1.0"
  },
  "servers": [
    {
      "url": "https://{baseUrl}/system/api/",
      "variables": {
        "baseUrl": {
          "default": "nexusevo.net"
        }
      }
    }
  ],
  "paths": {
    "/tenants": {
      "get": {
        "summary": "Listar Tenants",
        "tags": ["System Tenants"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Lista de tenants" } }
      },
      "post": {
        "summary": "Crear Tenant",
        "tags": ["System Tenants"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/TenantRequest" } } }
        },
        "responses": { "201": { "description": "Tenant creado" } }
      }
    },
    "/tenants/{id}": {
      "get": {
        "summary": "Ver detalles de Tenant",
        "tags": ["System Tenants"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "$ref": "#/components/parameters/id" }],
        "responses": { "200": { "description": "Detalles del tenant" } }
      },
      "put": {
        "summary": "Actualizar Tenant",
        "tags": ["System Tenants"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "$ref": "#/components/parameters/id" }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/TenantRequest" } } }
        },
        "responses": { "200": { "description": "Tenant actualizado" } }
      },
      "delete": {
        "summary": "Eliminar Tenant",
        "tags": ["System Tenants"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "$ref": "#/components/parameters/id" }],
        "responses": { "200": { "description": "Tenant eliminado" } }
      }
    },
    "/tenants/{id}/block": {
      "post": {
        "summary": "Bloquear Tenant",
        "tags": ["System Tenants"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "$ref": "#/components/parameters/id" }],
        "responses": { "200": { "description": "Tenant bloqueado" } }
      }
    },
    "/tenants/{id}/unblock": {
      "post": {
        "summary": "Desbloquear Tenant",
        "tags": ["System Tenants"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "$ref": "#/components/parameters/id" }],
        "responses": { "200": { "description": "Tenant desbloqueado" } }
      }
    }
  },
  "components": {
    "securitySchemes": { "bearerAuth": { "type": "http", "scheme": "bearer" } },
    "parameters": {
      "id": { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
    },
    "schemas": {
      "TenantRequest": {
        "type": "object",
        "required": ["company_name", "owner_name", "owner_email", "domain"],
        "properties": {
          "company_name": { "type": "string" },
          "owner_name": { "type": "string" },
          "owner_email": { "type": "string" },
          "domain": { "type": "string" },
          "plan_id": { "type": "integer" }
        }
      }
    }
  }
}
